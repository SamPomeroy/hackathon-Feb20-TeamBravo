# Copy this to .env and fill in your values
# cp .env.example .env

# Required
GROQ_API_KEY=your-groq-api-key-here

# Required — generate a real secret: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace-me-with-a-real-secret-key

# Optional — defaults shown
TOKEN_EXPIRY_SECONDS=86400
MAX_CHAT_HISTORY=10
GROQ_MODEL=llama-3.3-70b-versatile

# Service URLs (defaults work if running everything locally)
AUTH_SERVICE_URL=http://localhost:8001
CHAT_SERVICE_URL=http://localhost:8002
CONTENT_SERVICE_URL=http://localhost:8003

# DB paths (defaults to local files in each service dir)
AUTH_DB_PATH=auth.db
CHAT_DB_PATH=chat.db
CONTENT_DB_PATH=content.db

# Optional chaos mode
DEBUG_MODE=off
